<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="150dp"
    tools:context=".ManEditClass">

    <TextView
        android:id="@+id/tvUpdateLopHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Cập nhật lớp học"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edTenLHEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUpdateLopHoc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Tên lớp học" />

    <EditText
        android:id="@+id/edMoTaLHEd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTenLHEd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Mô tả" />

    <Button
        android:id="@+id/btnUpdateLH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edMoTaLHEd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Cập nhật" />

</RelativeLayout>