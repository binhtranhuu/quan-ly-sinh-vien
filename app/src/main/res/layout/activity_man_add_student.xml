<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="68dp"
    tools:context=".ManAddStudent">

    <TextView
        android:id="@+id/tvThemSinhVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Thêm sinh viên"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edTenSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvThemSinhVien"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Tên sinh viên" />

    <EditText
        android:id="@+id/edNamSinhSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edTenSV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Ngày sinh" />

    <EditText
        android:id="@+id/edQueQuanSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edNamSinhSV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Quê quán" />

    <Spinner
        android:id="@+id/spNamHocSV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edQueQuanSV"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnThemSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spNamHocSV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Thêm sinh viên" />


</RelativeLayout>